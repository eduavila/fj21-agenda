<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <display-name>fj21-agenda</display-name>
    <welcome-file-list> 
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jps</welcome-file>
    
    </welcome-file-list>
    
    
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/erro.html</location>
    </error-page>
    
    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
    
    <!-- criando Servlet -->
    <servlet>
        <servlet-name>servletOiMundo</servlet-name>     
        <servlet-class>
            com.agenda.OiMundo
        </servlet-class>  
    </servlet>
    
    
    <!--Mapeando Servlet -->
    <servlet-mapping>
        <servlet-name>servletOiMundo</servlet-name>
        <url-pattern>/oi</url-pattern>
    </servlet-mapping>
    
    
    
    <!--Configurando Servlet AdionaContato -->
        <servlet>
        <servlet-name>servletAddContato</servlet-name>     
        <servlet-class>
            com.agenda.AdicionaContatoServlet
        </servlet-class>  
    </servlet>
    
    
    <!--Mapeando Servlet -->
    <servlet-mapping>
        <servlet-name>servletAddContato</servlet-name>
        <url-pattern>/addcontato</url-pattern>
    </servlet-mapping>
    
    
    <!--Configurando Servlet Lista Contato -->
        <servlet>
        <servlet-name>servletListaContato</servlet-name>     
        <servlet-class>
            com.agenda.ListaContatoServlet
        </servlet-class>  
    </servlet>
    
    
    <!--Mapeando Servlet -->
    <servlet-mapping>
        <servlet-name>servletListaContato</servlet-name>
        <url-pattern>/lista/*</url-pattern>
    </servlet-mapping>
  
   <!--Trando exceções dentro da servlet -->
    
    
    
    
    
     <!--Configurando Servlet MinhaServlet -->
        <servlet>
        <servlet-name>minhaServlet</servlet-name>     
        <servlet-class>
            com.agenda.MinhaServlet
        </servlet-class>  
    </servlet>
    
    
    <!--Mapeando Servlet -->
    <servlet-mapping>
        <servlet-name>minhaServlet</servlet-name>
        <url-pattern>/minhaservlet/*</url-pattern>
    </servlet-mapping>
    
</web-app>
